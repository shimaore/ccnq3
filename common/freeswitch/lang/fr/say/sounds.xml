    <input pattern="^[nN]$"><match><action function="play-file" data="phonetic-ascii/110.wav"/></match></input>
    <input pattern="^[oO]$"><match><action function="play-file" data="phonetic-ascii/111.wav"/></match></input>
    <input pattern="^[pP]$"><match><action function="play-file" data="phonetic-ascii/112.wav"/></match></input>
    <input pattern="^[qQ]$"><match><action function="play-file" data="phonetic-ascii/113.wav"/></match></input>
    <input pattern="^[rR]$"><match><action function="play-file" data="phonetic-ascii/114.wav"/></match></input>
    <input pattern="^[sS]$"><match><action function="play-file" data="phonetic-ascii/115.wav"/></match></input>
