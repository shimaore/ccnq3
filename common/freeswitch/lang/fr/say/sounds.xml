<!--
  This is a replacement for mod_say_fr (fr-FR) since I couldn't get upstream to
  merge changes for France localization. ;)
-->
<include><!--This line will be ignored it's here to validate the xml and is optional -->

  <macro name="say-single">

    <!-- we did not think of recording "colon", did you? -->
    <input pattern="^:$">
      <match>
        <action function="play-file" data="digits/2.wav"/>
        <action function="play-file" data="digits/dot.wav"/>
      </match>
    </input>

    <input pattern="^([0-9])$">
      <match>
        <action function="play-file" data="digits/$1.wav"/>
      </match>
    </input>

    <input pattern="^[*]$"> <match> <action function="play-file" data="digits/star.wav"/> </match> </input>
    <input pattern="^[#]$"> <match> <action function="play-file" data="digits/pound.wav"/> </match> </input>

    <input pattern="^[ ]$"><match><action function="play-file" data="phonetic-ascii/32.wav"/></match></input>
    <input pattern="^[#]$"><match><action function="play-file" data="phonetic-ascii/35.wav"/></match></input>
    <input pattern="^[*]$"><match><action function="play-file" data="phonetic-ascii/42.wav"/></match></input>
    <input pattern="^[.]$"><match><action function="play-file" data="phonetic-ascii/46.wav"/></match></input>
